{
  "manifest_version": 2,
  "name": "In-Context Lookup",
  "version": "1.0.0",
  "description": "Explain selected text in context using AI",

  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    "content/content.css"
  ]
}